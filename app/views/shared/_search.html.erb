<div class="search">
  <div class="container">
    <%= form_tag(search_path, method: 'get') do %>
        <div class="flex-table">
          <div class="flex-table-item flex-table-item-primary">
            <div class="control">
              <span class="octicon octicon-search"></span>
                  <%= text_field_tag(:q, nil, :class => 'search-control', :id => 'search', :placeholder => "Have a Question? Ask or enter a search term here.") %>
            </div>
          </div>
          <div class="flex-table-item">
            <div class="action">
                <%= submit_tag('Search', :class => 'btn') %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>