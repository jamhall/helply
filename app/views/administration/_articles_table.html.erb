<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Topic</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
      <tr>
        <td><%= link_to(article.title, articles_show_path(article)) %></td>
        <td><%= article.topic.name %></td>
        <td style="width: 250px">
          <div class="btn-group">
            <%= link_to 'Edit', administration_article_edit_path(article), :class => 'btn btn-sm' %>
            <% if (article.is_published?) %>
                <%= link_to 'Unpublish', administration_article_unpublish_path(article.id), :method => :post, :class => 'btn btn-sm btn-danger' %>
            <% else %>
                <%= link_to 'Publish', administration_article_publish_path(article), :method => :post, :class => 'btn btn-sm' %>
            <% end %>
            <%= link_to 'Delete', administration_article_delete_path(:id => article.id), :method => :delete, :class => 'btn btn-sm btn-danger', :data => {:confirm => "You Sure?"} %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @articles %>